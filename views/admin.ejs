        <!--Header 2-->
        <header class="bg-dark py-5">
            <div class="container px-5">
                <div class="row gx-5 justify-content-center">
                    <div class="text-center">
                        <h1 class="display-5 fw-bolder text-white mb-2">Raw Data</h1>
                        <p class="lead text-white-75 mb-4">Select a record below to view its answers to the questions</p>
                    </div>
                </div>
            </div>
        </header>

        <!--Data section-->
        <section class="py-5 border-bottom" id="features">
            <div class="container px-5 my-5" style="width: 300px; text-align: center;">
                <!-- This is a dropdown menu designed to link to individual records -->
                <form action="/details" method="post">
                <select id="userid" name="userid">
                    <% for (let iCount = 0; iCount < personalDetails.length; iCount++) { %>
                    <option value="<%= personalDetails[iCount].Participant_ID %>"><%= personalDetails[iCount].Participant_ID %></option>
                    <% } %>
                </select>
                <br/><br/><button type="submit" class="btn btn-primary btn-lg px-4 me-sm-3" style="width: 200px">See record</button>
                </form>
            </div>
        </section>

        <!--Raw Data only to be shown to admin-->
        <section class="container px-5 my-5" id="rawData">
            <div class="table-responsive">
                <table class="table table-hover" id="myTable">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Timestamp</th>
                            <th scope="col">Age</th>
                            <th scope="col">Gender</th>
                            <th scope="col">City</th>
                            <th scope="col">Relationship Status</th>
                            <th scope="col">Occupational Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let iCount = 0; iCount < personalDetails.length; iCount++) { %>
                            <tr>
                                <th scope="row"><%= personalDetails[iCount].Participant_ID %></th>
                                <td><%= new Date(personalDetails[iCount].Timestamp).toLocaleString() %></td>
                                <td><%= personalDetails[iCount].Age %></td>
                                <td><%= personalDetails[iCount].Gender %></td>
                                <td><%= personalDetails[iCount].City %></td>
                                <td><%= personalDetails[iCount].Relationship_Status %></td>
                                <td><%= personalDetails[iCount].Occupational_Status %></td>
                                <td>
                                    <form action="/details" method="post">
                                        <input type="hidden" value="<%= personalDetails[iCount].Participant_ID %>" id="userid" name="userid">
                                        <button type="submit" class="btn btn-primary btn-lg px-4 me-sm-3" style="width: 100px"><i class="bi bi-eye"></i></button>
                                    </form>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>

        <script>
            $(document).ready(function(){
              $("#userid").on("keyup", function() {
                var value = $(this).val();
                $("#myTable tr").filter(function() {
                  $(this).toggle($(this).text().indexOf(value) > -1)
                });
              });
            });
        </script>


