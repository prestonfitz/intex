	<!-- Here is the survey in all of it's glory. I used a variety of input with some Javascript to make it more fun-->
	<section class="py-5 border-bottom" id="features">
		<div class="container px-5 my-5">
			<form action="/newSurvey" method="post">
				<ol>
					<!--Q1: AGE-->
					<li><label for="age">What is your age?</label></li>
					<input type="number" min="1" max="100" id="age" name="age" style="text-align: center;"
						required="required"><br><br>

					<!--Q2: GENDER-->
					<li><label for="gender">What is your gender?</label></li>
					<select name="gender" id="listGender" required="required">
						<option value="Male">Male</option>
						<option value="Female">Female</option>
						<option value="Non-binary">Non-binary</option>
						<option value="Other">Other</option>
						<option value="Prefer not to say">Prefer not to say</option>
					</select><br><br>

					<!--HIDDEN INPUT TO SPECIFY PROVO CITY-->
					<input type="hidden" name="city" id="city" value="Provo">

					<!--Q3: RELATIONSHIP STATUS-->
					<li><label for="relationship">What is your relationship status?</label></li>
					<select name="relationship" id="relationship" required="required">
						<option value="single">Single</option>
						<option value="in-relationship">In a relationship</option>
						<option value="married">Married</option>
						<option value="divorced">Divorced</option>
						<option value="widowed">Widowed</option>
						<option value="complicated">It's complicated</option>
					</select><br><br>

					<!--Q4: OCCUPATION STATUS-->
					<li><label>What is your occupation status?</label></li>
					<input type="radio" id="S-Student" name="occupation" value="School student" required="required">
					<lable for="S-Student">School Student</lable>
					<input type="radio" id="U-Student" name="occupation" value="University student" required="required">
					<lable for="U-Student">University Student</lable>
					<input type="radio" id="work" name="occupation" value="Salaried Worker" required="required">
					<lable for="work">Working</lable>
					<input type="radio" id="No-work" name="occupation" value="Not working" required="required">
					<label for="No-work">Not working</label>
					<input type="radio" id="retired" name="occupation" value="Retired" required="required">
					<lable for="retired">Retired</lable><br><br>

					<!--Q5: AFFILIATED ORGANIZATIONS-->
					<li><label>What type of organizations are you affiliated with?</label></li>
					<input type="checkbox" id="University" name="organizations" value="1">
					<lable for="University">University</lable>
					<input type="checkbox" id="Private" name="organizations" value="2">
					<lable for="Private">Private</lable>
					<input type="checkbox" id="School" name="organizations" value="3">
					<lable for="School">School</lable>
					<input type="checkbox" id="Company" name="organizations" value="4">
					<lable for="Company">Company</lable>
					<input type="checkbox" id="Government" name="organizations" value="5">
					<lable for="Government">Government</lable><br><br>

					<!--Q6: USE SOCIAL MEDIA-->
					<li><label>Do you use social media?</label></li>
					<input type="radio" id="ySocial" value="Yes" name="useSocial" required="required">
					<label for="ySocial">Yes</label>
					<input type="radio" id="nSocial" value="No" name="useSocial" required="required">
					<label for="nSocial">No</label><br><br>

					<!--Q7: SOCIAL MEDIA PLATFORMS USED-->
					<!--Something extra: replace the checkboxes with platform logos-->
					<li><label>What social media platforms do you commonly use?</label></li>
					<input type="checkbox" id="Facebook" name="platform" value="1">
					<label for="Facebook">Facebook</label>
					<input type="checkbox" id="Youtube" name="platform" value="2">
					<label for="Youtube">Youtube</label>
					<input type="checkbox" id="Pinterest" name="platform" value="3">
					<label for="Pinterest">Pinterest</label>
					<input type="checkbox" id="Instagram" name="platform" value="4">
					<label for="Instagram">Instagram</label>
					<input type="checkbox" id="Snapchat" name="platform" value="5">
					<label for="Snapchat">Snapchat</label>
					<input type="checkbox" id="TikTok" name="platform" value="6">
					<label for="TikTok">TikTok</label>
					<input type="checkbox" id="Reddit" name="platform" value="7">
					<label for="Reddit">Reddit</label>
					<input type="checkbox" id="Discord" name="platform" value="8">
					<label for="Discord">Discord</label>
					<input type="checkbox" id="Twitter/X" name="platform" value="9">
					<label for="Twitter/X">Twitter/X</label>
					<input type="checkbox" id="BeReal" name="platform" value="10">
					<label for="BeReal">BeReal</label>
					<input type="checkbox" id="Other" name="platform" value="11">
					<label for="Other">Other</label><br><br>

					<!--Q8: TIME SPENT ON SOCIAL MEDIA-->
					<li><label for="time">What is the average time you spend on social media every day?</label></li>
					<input type="range" name="time" id="time" min="1" max="6">
					<p id="timeOutput"></p>

					<!--Q9: ON SOCIAL MEDIA WITH NO PURPOSE-->
					<li><label for="9">How often do you find yourself using social media without a specific
							purpose?</label></li>
					<input type="range" name="9" id="9" min="1" max="5">
					<p id="9Output"></p>

					<!--Q10: DISTRACTED BY SOCIAL MEDIA-->
					<li><label for="10">How often do you get distracted by social media when you are busy doing
							something?</label></li>
					<input type="range" name="10" id="10" min="1" max="5">
					<p id="10Output"></p>

					<!--Q11: RESTLESS AFTER NOT USING SOCIAL MEDIA-->
					<li><label for="11">Do you feel restless if you haven&#39;t used social media in a while?</label>
					</li>
					<input type="range" name="11" id="11" min="1" max="5">
					<p id="11Output"></p>

					<!--Q12: HOW EASILY DISTRACTED-->
					<li><label for="12">How easily distracted are you?</label></li>
					<input type="range" name="12" id="12" min="1" max="5">
					<p id="12Output"></p>

					<!--Q13: BOTHERED BY WORRIES-->
