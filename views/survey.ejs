		var sTimeOutput = 'Between 3 and 4 hours';
		var timeSlider = document.getElementById("time");
		var timeOutput = document.getElementById("timeOutput");
		timeOutput.innerHTML = sTimeOutput;

		timeSlider.oninput = function () {
			if (this.value == 1) {
				sTimeOutput = "Less than an hour"
			}
			else if (this.value == 2) {
				sTimeOutput = "Between 1 and 2 hours"
			}
			else if (this.value == 3) {
				sTimeOutput = "Between 2 and 3 hours"
			}
			else if (this.value == 4) {
				sTimeOutput = "Between 3 and 4 hours"
			}
			else if (this.value == 5) {
				sTimeOutput = "Between 4 and 5 hours"
			}
			else {
				sTimeOutput = "More than 5 hours"
			}
			timeOutput.innerHTML = sTimeOutput;
		}
	</script>
